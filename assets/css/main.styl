@import "colors"

.top-highlight
   height: 10px
   background: dark-blue

.header
   position: relative

   .search-bar
      position: absolute
      top: 12px
      right: 24px
      width: 200px

.title
   position: relative
   padding: 36px 0
   margin: 0
   font-size: 36px
   font-family: 'Open Sans', sans-serif
   text-align: center
   //text-transform: lowercase
   color: near-black

   .title__filter
   .title__sep
      font-weight: 300

   .title__sep
      margin: 0 12px

   .title__text
      font-weight: 700

.subtitle
   color: bright-blue
   position: absolute
   left: 24px
   right: 24px
   bottom: 14px
   font-family: 'Open Sans', sans-serif
   font-style: italic
   font-weight: 300
   font-size: 14px
   text-align: center
   text-decoration: none
   
   a
      color: bright-blue
      text-decoration: none
      
      &:hover
         color: medium-blue

.container
   display: flex
   flex-direction: row
   padding 0 24px

.content
   display: flex
   flex: 1 1 0
   flex-direction: row
   font-family: 'Open Sans', sans-serif
   padding-top: 16px
   border-top: 1px solid lightest-gray

.sidebar
   min-height: 100px
   width: 140px
   margin-right: 24px
   flex-shrink: 0
   font-family: 'Open Sans', sans-serif

.categories__heading
   padding: 0
   margin: 0 
   font-size: 18px
   font-weight: 300
   text-align: right
   text-transform: uppercase
   color: near-black
   
.categories__list
   display: flex
   flex-direction: column
   align-items: flex-end
   border-right: 1px solid lightest-gray
   margin-bottom: 24px
   padding: 0 12px 0 0
   
   li
      list-style: none
      text-align: right
      padding: 0
      color: bright-blue
      font-style: italic
      cursor: pointer
   
      &:hover
         color: medium-blue
         
@media (max-width: 900px)
   .header .title
      font-size: 28px

@media (max-width: 750px)
   .header
      .title
         padding-top: 56px
         font-size: 24px
         
      .search-bar
         right: inherit
         bottom: 16px
         margin: 0 0 0 -100px
         left: 50%

@media (max-width: 600px)         
   .container .sidebar
      display: none